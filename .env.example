# FastGas Shop Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
# Get these from Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ===========================================
# MONGODB CONFIGURATION  
# ===========================================
# MongoDB Atlas connection string or local MongoDB
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/fastgas?retryWrites=true&w=majority
# For Local: mongodb://localhost:27017/fastgas
MONGODB_URI=mongodb://localhost:27017/fastgas

# ===========================================
# BACKEND API URL
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# ===========================================
# M-PESA CONFIGURATION (Safaricom Daraja API)
# ===========================================
# Get these from Safaricom Developer Portal: https://developer.safaricom.co.ke
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_PASSKEY=your_passkey
MPESA_SHORTCODE=your_shortcode
MPESA_CALLBACK_URL=https://yourdomain.com/api/mpesa/callback
MPESA_ENVIRONMENT=sandbox

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000
